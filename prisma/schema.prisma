generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 프로젝트 (기존 WorkflowTemplate에서 확장)
model Project {
  id             String   @id @default(uuid())
  name           String   @db.VarChar(100)

  // SDXL 모델 설정
  sdxlWorkflow   Json?    @map("sdxl_workflow")
  sdxlParams     Json?    @map("sdxl_params")

  // SD1.5 모델 설정
  sd15Workflow   Json?    @map("sd15_workflow")
  sd15Params     Json?    @map("sd15_params")

  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  histories TestHistory[]

  @@map("projects")
}

// 테스트 히스토리
model TestHistory {
  id              String    @id @default(uuid())
  projectId       String    @map("project_id")
  modelType       String    @map("model_type") @db.VarChar(10)  // sdxl / sd15
  params          Json
  inputImageUrl   String?   @map("input_image_url") @db.VarChar(500)
  outputImageUrls Json?     @map("output_image_urls")
  status          String    @default("pending") @db.VarChar(20)
  jobId           String?   @map("job_id") @db.VarChar(100)
  errorMessage    String?   @map("error_message") @db.Text
  isSelected      Boolean   @default(false) @map("is_selected")
  executedAt      DateTime  @default(now()) @map("executed_at")
  completedAt     DateTime? @map("completed_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
  @@index([executedAt])
  @@map("test_history")
}

// 기존 WorkflowTemplate (레거시, 마이그레이션용 - 나중에 삭제)
model WorkflowTemplate {
  id             String   @id @default(uuid())
  name           String   @db.VarChar(100)
  modelType      String   @map("model_type") @db.VarChar(10)
  baseWorkflow   Json     @map("base_workflow")
  editableParams Json     @map("editable_params")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("workflow_templates")
}
